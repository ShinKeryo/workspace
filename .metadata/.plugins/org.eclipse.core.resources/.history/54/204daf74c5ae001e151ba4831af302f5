<!-- 버튼 -->
<button onclick="changeVideo()">다음 동영상 보기</button>

<script src="https://www.youtube.com/iframe_api"></script>
<script>
    // YouTube API로드 및 플레이어 생성
    var player;
    function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
            height: '360',
            width: '640',
            videoId: '1ZOmkpn4mGg', // 주어진 YouTube 동영상의 Video ID
            events: {
                'onReady': onPlayerReady
            }
        });
    }

    function onPlayerReady(event) {
        // 플레이어가 준비되면 실행될 코드
    }

    function changeVideo() {
        // 다음 동영상의 YouTube Video ID로 변경
        player.loadVideoById({
            'videoId': '다음_동영상의_Video_ID', // 다음 동영상의 YouTube Video ID로 대체
            'suggestedQuality': 'default'
        });
    }
</script>
   
   
   
   

